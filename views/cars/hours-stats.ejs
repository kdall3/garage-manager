<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

<body>
  
  <%- include("../partials/profile-button") %>
  <%- include("../partials/back-button") %>

  <h1 class="subheader">
    Hours worked â€” <%= reg_plate %>
  </h1>

  <table class="table-card">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Total Hours</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (hoursWorked.length === 0) { %>
        <tr>
          <td colspan="2">No hours logged for this car</td>
        </tr>
      <% } %>

      <% hoursWorked.forEach(h => { %>
        <tr>
          <td><%= h.employee_id %></td>
          <td style="width: 100vw"><%= h.first_name %></td>
          <td style="width: 100vw"><%= h.last_name %></td>
          <td style="width: 100vw"><%= h.total_hours %> hrs</td>
          <td><%= h.percentage %>%</td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <%- include("../partials/footer") %>
</body>
</html>
