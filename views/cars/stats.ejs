<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

<body>
  <%- include("../partials/profile-button") %>

  <h1 class="subheader"><%= car.reg_plate %></h1>

  <div class="car-stats">

    <div class="finance-stats">
      <div class="stat-card">
        <h3>Profit / Loss</h3>
        <p class="profit-loss-bar <%= car.profit_loss >= 0 ? 'profit' : 'loss' %>">£<%= profitLoss %></p>
      </div>
    </div>

    <div class="hours-stats">
      <div class="stat-card" onclick="location.href='/cars/<%= car.reg_plate %>/edit'">
        <h3>Car Details</h3>
        <p><strong><%= car.make %> <%= car.model %></strong></p>
        <p><%= car.year %> • <%= car.mileage %> miles</p>
        <p><%= car.colour %></p>
        <p><%= car.damage %></p>
        <p><%= car.description %></p>
        <p>Status: <%= car.status %></p>
      </div>

      <div class="stat-card" onclick="location.href='<%= car.reg_plate %>/hours'">
        <h3>Total Hours</h3>
        <p><%= hoursWorked.get(car.reg_plate) %> hrs</p>
      </div>
    </div>

    <button class="set-sold" type="button" onclick="location.href='/cars/<%= car.reg_plate %>/sell'">Set Sold</button>
    <button class="add-hours" type="button" onclick="location.href='/hours/add?reg_plate=<%= encodeURIComponent(car.reg_plate) %>'">Add Hours</button>

  </div>
  
  <%- include("../partials/footer") %>

</body>
</html>
